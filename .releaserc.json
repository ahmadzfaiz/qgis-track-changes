{
  "branches": ["main"],
  "repositoryUrl": "https://x-access-token:${GH_TOKEN}@github.com/ahmadzfaiz/qgis-track-changes.git",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false 
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": "üéâ This PR is included in version ${nextRelease.version}!",
        "failComment": "‚ö†Ô∏è The release failed! Check the logs."
      }
    ]
  ]
}